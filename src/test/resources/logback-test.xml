<configuration>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%class{50}.%M:%L) - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="result" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%magenta(%msg%n)</pattern>
        </encoder>
    </appender>
    <logger name="result" level="INFO" additivity="false">
        <appender-ref ref="result"/>
    </logger>

    <!--<logger name="org.postgresql" level="debug"/>-->
    <!--<logger name="org.springframework.jdbc" level="debug"/>-->

    <logger name="ru.javawebinar.topjava" level="debug"/>

    <appender name="transaction" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%yellow(%msg%n)</pattern>
        </encoder>
    </appender>
    <logger name="org.springframework.jdbc.datasource.DataSourceTransactionManager" level="debug">
        <appender-ref ref="transaction"/>
    </logger>

    <logger name="org.hibernate.cache" level="debug">
        <appender-ref ref="transaction"/>
    </logger>
    <logger name="org.ehcache" level="debug">
        <appender-ref ref="transaction"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>